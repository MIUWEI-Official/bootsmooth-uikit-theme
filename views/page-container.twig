{% extends "base.twig" %}
{% block content %}
<header class="uk-margin-top uk-margin-bottom">
    <div class="uk-container">
        <div uk-grid>
            <div class="uk-width-2-3@s">
                <h1>{{post.title}}</h1>
            </div>
            <div class="uk-width-1-3@s">
                {{ header_widget }}
            </div>
        </div>
    </div>
</header>
<article class="uk-container uk-section post-type-{{post.post_type}}" id="post-{{post.ID}}">
	{% include template_from_string(post.content) %}
</article>
{% endblock %}