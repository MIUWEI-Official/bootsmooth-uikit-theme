{% extends "base.twig" %}

{% block content %}
{% if post.get_thumbnail %}
<header class="uk-inline uk-height-large uk-background-cover uk-background-fixed uk-overflow-hidden uk-flex uk-flex-top" style="background-image: url('{{post.thumbnail.src}}');">
{% else %}
<header class="uk-inline uk-height-large uk-background-muted uk-overflow-hidden uk-light uk-flex uk-flex-top" style="background-image: url('{{post.thumbnail.src}}');">
{% endif %}
	<div class="uk-position-cover uk-overlay uk-overlay-primary">
		<div class="uk-overlay uk-width-1-2@m uk-text-center uk-margin-auto uk-position-center">
			<h1 class="uk-heading-line uk-text-center uk-light">{{post.title}}</h1>
			<p class="uk-light">{{post.date | date}}</p>
		</div>
	</div>
</header>
<section class="uk-container uk-margin-top">
	<div uk-grid>
		<article class="uk-width-2-3@s uk-article post-type-{{post.post_type}}" id="post-{{post.ID}}">
		{{ post.content }}
		</article>
		<aside class="uk-width-1-3@s">
		{% include "sidebar.twig" %}
		</aside>
	</div>
</section>
{% endblock %}
 