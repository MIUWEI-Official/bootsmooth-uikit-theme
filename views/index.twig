{% extends "base.twig" %}

{% block content %}
<header class="uk-section">
    <div class="uk-container">
        <div uk-grid>
            <div class="uk-width-2-3@s">
                <h1>{{title}}</h1>
            </div>
            <div class="uk-width-1-3@s">
                <div class="uk">
                    {{ header_widget }}
                </div>
            </div>
        </div>
    </div>
</header>
<div class="uk-container uk-margin">
    <div class="uk-child-width-1-3@s uk-grid-match" uk-grid-parallax >
        {% for post in posts %}
        <div>
        	{% include 'tease.twig' %}
        </div>
        {% endfor %}
    </div>
    {% include 'pagination.twig' %}
</div>
{% endblock %}