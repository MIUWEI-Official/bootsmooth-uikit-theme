{% extends "base.twig" %}

{% block content %}
<div class="uk-container uk-margin-large-top uk-margin-bottom">
	{% if banner_widgets %}
	{{ banner_widgets }}
	{% endif %}
	{% set first = posts|first %}
	<div class="uk-margin"  uk-grid>
		<div class="uk-width-2-3@m ">
			{% if first and paged == 0 %}
			{% set post = first %}
			{% set posts = posts | slice(1) %}
			<header class="uk-margin-bottom uk-box-shadow-medium">
				{% include 'tease.twig' %}
			</header>
			{% endif %}
			<div class="uk-child-width-1-2@s uk-grid-match" uk-grid-parallax>
				{% for post in posts %}
				<div>
					{% include 'tease.twig' %}
				</div>
				{% endfor %}
			</div>
			{% include 'pagination.twig' %}
		</div>
		<div class="uk-width-1-3@m">
			{% include 'sidebar.twig' %}
		</div>
	</div>
</div>
{% endblock %}